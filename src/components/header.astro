---
import Logo from "@assets/logo.svg";
import { IconHome2, IconPizza } from "@tabler/icons-react";
---

<header class="header">
  <h1 class="header_h1">
    <Logo class="header_logo" />
    Pizzer√≠a Palace
  </h1>

  <nav class="header_nav">
    <a href="/"><IconHome2 strokeWidth={2} /> Inicio </a>
    <a href="/products"><IconPizza strokeWidth={2} /> Productos</a>
  </nav>
</header>

<style>
  .header {
    width: 100%;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    padding: 16px;
  }
  .header_h1 {
    display: flex;
    align-items: center;
    gap: 4px;
    color: var(--color-brand-1);
    user-select: none;
  }
  .header_logo {
    max-width: 45px;
    height: auto;
  }

  .header_nav {
    display: flex;
    align-items: center;

    & a {
      display: flex;
      align-items: center;
      gap: 4px;
      padding: 12px 24px;
      border-radius: 4px;
      transition:
        background-color 0.3s ease,
        color 0.3s ease,
        transform 0.2s ease;
      &:hover {
        background-color: var(--color-brand-1);
        color: var(--foreground);
      }
      &:active {
        transform: scale(0.96);
      }
    }
  }
</style>
