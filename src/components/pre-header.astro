---
import { IconHome2 } from "@tabler/icons-react";
---

<header>
  <nav class="header_nav">
    <a href="/"><IconHome2 strokeWidth={2} /> <span>Inicio</span> </a>
    <!-- <a href="/products"><IconPizza strokeWidth={2} /> <span>Productos</span></a> -->
  </nav>
</header>

<style>
  .header_nav {
    display: flex;
    align-items: center;

    & a {
      display: flex;
      align-items: center;
      gap: 4px;
      padding: 8px 16px;
      border-radius: 4px;
      transition:
        background-color 0.3s ease,
        color 0.3s ease,
        transform 0.2s ease;
      &:hover {
        background-color: var(--color-brand-1);
        color: var(--foreground);
      }
      &:active {
        transform: scale(0.96);
      }
    }
    @media (max-width: 375px) {
      & {
        gap: 8px;
      }
      & > a {
        background-color: var(--color-brand-1);
        color: var(--background);
      }
      & > a > span {
        display: none;
      }
    }
  }
</style>
